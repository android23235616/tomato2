<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        CardView:cardElevation="0dp"
        android:id="@+id/cardView"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        >
        <FrameLayout

            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:foreground="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <!--   Recycler View Item Row   -->


            <TextView

                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="21dp"
                android:textSize="20dp"
                android:text="Baadshahi"
                android:textStyle="bold"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.3"
                android:padding="4dp"
                android:id="@+id/rating"
                android:textColor="#FFFFFF"
                android:background="@drawable/shaperating"
                android:layout_marginTop="22dp"

                android:textSize="15.5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="Shop No 6, Ground Floor..."
                android:layout_marginTop="40dp"
                android:id="@+id/vicinity"
                android:textColor="#909497"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:text="95840339230"
                android:layout_marginTop="82dp"
                android:id="@+id/number"
                android:textColor="#909497"
                android:textSize="13dp"

                />
            <ImageView
                android:layout_marginLeft="115dp"
                android:layout_marginTop="85dp"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp"
                android:src="@drawable/call"/>

            <TextView
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="Types:Spa, Restaurant, Hotel"
                android:layout_marginTop="60dp"
                android:id="@+id/types"
                android:textColor="#909497"
                /></FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>