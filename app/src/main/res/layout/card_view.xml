<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        CardView:cardElevation="0dp"
        android:id="@+id/cardView"

        card_view:cardCornerRadius="8dp"
        >
        <FrameLayout
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_viewHotelPics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="12dp"

                >

                <!--   Recycler View Item Row   -->
                <LinearLayout

                    android:layout_width="90dp"
                    android:orientation="vertical"
                    android:layout_height="90dp">


                    <ImageView
                        android:background="@drawable/background"
                        android:id="@+id/pic"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        <TextView

            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:text="Baadshahi"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.3"
            android:padding="4dp"
            android:id="@+id/rating"
            android:textColor="#FFFFFF"
            android:background="@drawable/shaperating"
            android:layout_marginTop="12dp"

            android:textSize="15.5dp"
           android:layout_marginRight="20dp"
            android:layout_gravity="right"
            />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="105dp"
    android:text="Shop No 6, Ground Floor..."
    android:layout_marginTop="40dp"
    android:id="@+id/vicinity"
    android:textColor="#909497"
    android:textSize="16dp"

    />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:text="95840339230"
            android:layout_marginTop="82dp"
            android:id="@+id/number"
            android:textColor="#909497"
            android:textSize="13dp"

            />
        <ImageView
            android:layout_marginLeft="115dp"
            android:layout_marginTop="85dp"
            android:layout_width="12.5dp"
            android:layout_height="12.5dp"
            android:src="@drawable/call"/>

            <ImageButton
                android:layout_width="20dp"
                android:id="@+id/favourite"
                android:layout_height="20dp"
                android:background="@drawable/black_tomato"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

        <TextView
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:text="Types:Spa, Restaurant, Hotel"
            android:layout_marginTop="60dp"
            android:id="@+id/types"
            android:textColor="#909497"
            /></FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>