<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_reviews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/tools">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:civ_border_width="2dp"
    android:layout_marginLeft="5.5dp"
    app:civ_border_color="#000000"
    android:layout_marginTop="4dp"
    android:id="@+id/profile_pic"
    android:src="@drawable/background"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/name"
        android:textColor="#CD5C5C"
        android:text="Tanmay Majumdar"
        android:paddingLeft="55dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="10dp"
        android:id="@+id/date"
        android:text="22 January 2012"
        android:paddingLeft="55dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:id="@+id/actual_review"
        android:text="@string/example_review"/>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.3"
        android:padding="4dp"
        android:id="@+id/rating"
        android:textColor="#FFFFFF"
        android:background="@drawable/shaperating"
        android:layout_marginTop="5dp"
        android:textSize="15.5dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        />
</android.support.v7.widget.CardView>